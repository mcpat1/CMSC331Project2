<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.helloworld"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- use permissions -->
    <!-- can we keep it false? -->
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
 	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- SQL stuff -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- android:minSdkVersion="16" OR...8??? -->
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />
    <!-- need to change @drawable/ic_launcher (icon) -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >

        <!-- @style/AppTheme -->
        <activity
            android:name="com.example.CulturalRetriever.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.CulturalRetriever.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.helloworld.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- A child of the main activity -->
        <!-- Does this child class go here or outside and below as the auto-generator placed it -->
        <activity
            android:name="com.example.CulturalRetriever.GoActive"
            android:label="@string/title_GoActive"
            android:parentActivityName="com.example.CulturalRetriever.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.helloworld.MainActivity" />
        </activity>
        <activity
            android:name="com.example.CulturalRetriever.LandmarkIt"
            android:label="@string/title_activity_landmark_it"
            android:parentActivityName="com.example.CulturalRetriever.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.helloworld.MainActivity" />
        </activity>
        <activity
            android:name="com.example.CulturalRetriever.DatabaseActivity"
            android:label="@string/title_activity_database"
            android:parentActivityName="com.example.CulturalRetriever.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActiviy" />
        </activity>
        <activity
            android:name="com.example.CulturalRetriever.MainFragment"
            android:label="@string/title_activity_main_fragment" >
        </activity>
        <activity
            android:name="com.example.CulturalRetriever.MainFlipper"
            android:label="@string/title_activity_main_flipper" >
        </activity>
        <activity
            android:name="com.example.CulturalRetriever.SliderPreferences"
            android:label="@string/title_activity_slider_preferences" >
        </activity>
        <activity
            android:name="com.example.CulturalRetriever.SQLconnect"
            android:label="@string/title_activity_sqlconnect" >
        </activity>
    </application>

</manifest>