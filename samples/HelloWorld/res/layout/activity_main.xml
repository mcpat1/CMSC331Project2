<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
	android:paddingLeft="16dp"
    android:paddingRight="16dp">
        
     <Button
        android:id="@+id/button_go_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_go_active"
        android:layout_alignParentTop="true" 
        android:layout_alignParentRight="true"/>
     
     <EditText android:id="@+id/edit_password_message"
        android:inputType="textPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_password_message"
        android:layout_below="@id/button_go_active" 
        android:layout_centerVertical="true"/>
          
     <EditText android:id="@+id/edit_username_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_username_message"
        android:layout_toLeftOf="@id/edit_password_message" />
     

	<Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_signup" 
        android:layout_below="@id/edit_username_message"/>
	<Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_go" 
        android:layout_below="@id/edit_password_message"/>
     
     <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_landmark_it"
        android:layout_alignParentBottom="true" 
        android:layout_alignParentRight="true" />
</RelativeLayout>
